{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create index.html",
            "type": "shell",
            "command": "node",
            "args": [
                "IndexBuilder.js"
            ],
            "options": {
                "cwd": "${workspaceRoot}/indexbuilder"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "remove index.html",
            "type": "shell",
            "command": "rm",
            "args": [
                "index.html"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}